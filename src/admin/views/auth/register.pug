doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Register | UAM
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
main.d-flex.flex-nowrap.min-vh-100.justify-content-center.align-items-center.bg-light
  form.border.bg-white.rounded-1.p-5.shadow-sm(style='width: 400px' action='register' method='POST')
    p.fs-3.text-center.fw-bold UAM Service
    p.text-center.text-body-tertiary Register an account
    if (errors)
      small.mb-3.text-danger.text-opacity-75.text-center.d-block= errors.message
    - const formValues = values || {}
    .mb-3
        label.form-label.text-body-secondary(for='username') Username
          span.text-danger.text-opacity-75 *
        input#username.form-control.rounded-1(type='text' name='username' value=formValues.username aria-describedby='username-error')
        if (errors)
          small#username-error.form-text.text-danger.text-opacity-75= errors.username
    .mb-3
        label.form-label.text-body-secondary(for='email') Email
          span.text-danger.text-opacity-75 *
        input#email.form-control.rounded-1(type='email' name='email' value=formValues.email aria-describedby='email-error')
        if (errors)
          small#email-error.form-text.text-danger.text-opacity-75= errors.email
    .mb-3
        label.form-label.text-body-secondary(for='password') Password
          span.text-danger.text-opacity-75 *
        input#password.form-control.rounded-1(type='password' name='password' value=formValues.password aria-describedby='password-error')
        if (errors)
          small#passwordl-error.form-text.text-danger.text-opacity-75= errors.password
    .mb-3.form-check
        input#exampleCheck1.form-check-input(type='checkbox')
        label.form-check-label(for='exampleCheck1') Remember me
    button.btn.btn-primary.w-100.rounded-1.bg-gradient(type='submit') Register


script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
