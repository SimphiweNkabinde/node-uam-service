.d-flex.flex-column.flex-shrink-0.p-3.text-bg-dark(style='width: 240px')
    a.mb-3.mb-md-0.me-md-auto.text-white.text-decoration-none
        span.fs-4 UAM Service
        p.fw-lighter User Access Management
        p.small.fw-lighter data storage, authentication, user permissions
    hr
    if (entities)
        ul.nav.nav-pills.flex-column.mb-auto
            each entity in entities 
                li.nav-item
                    a.nav-link.text-white(href=`/admin/${entity.path}` class={active: entity.name === entity})= entity.name