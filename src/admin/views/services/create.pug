extends ../layout.pug
block content
    .mb-5
        div.d-flex.align-items-center.gap-3
            h1.mb-3 Create a new Service
        form.border.rounded.py-3.px-4.bg-white.shadow-sm.m-0(action='create' method='POST')
            each field in ['name', 'description']
                .mb-3.col-6
                    label.form-label.text-capitalize.fw-bold(for=field)= field
                    input.form-control(id=field name=field value=values[field]) 
                    if (errors)
                        small#email-error.form-text.text-danger.text-opacity-75= errors[field]
            p.fw-bold.mb-1 Permissions
            div.ps-3.mb-5
                .mb-1.d-flex.gap-2
                    input.form-control(placeholder='name' name='permission-name-1' style={width:'300px'})
                    input.form-control(placeholder='description' name='permission-description-1' style={width:'400px'})
                    button.btn.btn-primary(type='button') +
            .mb-3.col.d-flex.justify-content-between
                a.btn.btn-outline-secondary(href='/admin/services') cancel
                button.btn.btn-primary(type='submit') create
